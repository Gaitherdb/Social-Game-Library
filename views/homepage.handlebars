<!-- Homepage just has a single column that holds a welcome message and update notes -->
<div class="container">
    <div class="row row-cols-1 justify-content-center my-3">

        <div class="col-md-auto text-center">

            <!-- Welcome Message -->
            <div class="container p-5">
                <h2>Game Tracker</h2>
                <p class="text-break fs-5 text-muted">This site allows you to track your own game library and check on
                    what your friends are playing!</p>
            </div>

            <!-- Update Notes -->
            <div class="container p-5">
                <h3>Friends Feed</h3>
                <!-- If you haven't logged in, you get a message saying you should -->
                {{#if logged_in}}
                <div id='feedDiv'></div>

                <!-- If you have logged in but don't have any friends, you get a message saying you should add friends -->
                {{#each users as |user|}}
                {{#unless user.friends.length}}
                <p class="text-break fs-5 text-muted">When you have added friends to your friendslist, you'll see what they've been adding to their library here!</p>
                {{/unless}}
                {{/each}}
                {{else}}
                <p class="text-break fs-5 text-muted">Log in to see what your friends have been up to!</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<!-- Only construct a feed if you have logged -->
{{#if logged_in}}
<script src="/js/homefeed.js"></script>
{{/if}}