<!-- Friend's Profile -->
<div class="container">

    <!-- This first row just contains the heading and description -->
    <div class="row row-cols-1 justify-content-center my-3">
        <div class="col-md-auto text-center">
            <div class="container p-5">
                <h2>{{name}}'s profile</h2>
                <p class="text-break fs-5 text-muted">On this page, you can check out what games {{name}} has been
                    adding to the collection and playing recently.</p>
            </div>
        </div>
    </div>

    <!-- This is the main row which contains the two columns -->
    <div class="row row-cols-1 justify-content-center my-3">

        <!-- Friend's Library Table -->
        <div class="col-10 text-center">
            <div class="container p-1">
                <table class="table">

                    <!-- Heading row -->
                    <thead>
                        <tr>
                            <th scope="col">Game Title</th>
                            <th scope="col">Platform</th>
                            <th scope="col">Beaten?</th>
                            <th scope="col">Currently Playing?</th>
                            <th scope="col">Date Added</th>
                        </tr>
                    </thead>

                    <!-- Selected friend's actual games -->
                    <tbody>
                        {{#if owned_games.length}}
                        {{#each owned_games as |game|}}
                        <tr>
                            <th scope="row">{{game.name}}</th>
                            <td>{{game.platform}}</td>
                            <td>{{#if game.beaten}}Yes{{else}}No{{/if}}</td>
                            <td>{{#if game.currently_playing}}Yes{{else}}No{{/if}}</td>
                            <td>{{format_time game.date_added}}</td>
                        </tr>
                        {{/each}}
                        {{/if}}
                    </tbody>

                </table>
            </div>
        </div>

    </div>

</div>