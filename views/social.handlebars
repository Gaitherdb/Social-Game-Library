<!-- Social has two columns: -->
<!-- First: A friends list that you can use to select which friend you want to stalk. -->
<!-- Second: A table showing their game collection -->

<div class="container">

    <!-- This first row just contains the heading and description -->
    <div class="row row-cols-1 justify-content-center my-3">
        <div class="col-md-auto text-center">
            <div class="container p-5">
                <h2>Your Friends</h2>
                <p class="text-break fs-5 text-muted">On this page, you can check out what games your friends have been adding to the collection and playing recently</p>
            </div>
        </div>
    </div>

    <!-- This is a row that only contains the "Add Game" button -->
    <div class="row row-cols-1 justify-content-start my-3">
        <div class="d-grid gap-2 col-3 ">
            <button class="btn btn-outline-primary" type="button">+ Add Game</button>
        </div>
    </div>

    <!-- This is the main row which contains the two columns -->
    <div class="row row-cols-2 justify-content-center my-3">

        <!-- Library Table -->
        <div class="col-10 text-center">
            <div class="container p-1">
                <table class="table">

                    <!-- Heading row -->
                    <thead>
                        <tr>
                            <th scope="col">Game Title</th>
                            <th scope="col">Platform</th>
                            <th scope="col">Date Added</th>
                            <th scope="col">Beaten?</th>
                        </tr>
                    </thead>

                    <!-- The actual games -->
                    <tbody>
                        {{#if games.length}}
                        {{#each games as |game|}}
                        <tr>
                            <th scope="row">{{game.title}}</th>
                            <td>{{game.platform}}</td>
                            <td>{{game.date_added}}</td>
                            <td>{{game.beaten}}</td>
                        </tr>
                        {{/each}}
                        {{/if}}

                    </tbody>

                </table>
            </div>
        </div>

        <!-- Filter-Table controls -->
        <div class="col-2 text-center">
            <div class="container p-1">
                Filter By:
                <ul class="m-2 list-group">
                    <button type="button" class="list-group-item list-group-item-action active" aria-current="true">
                        None
                    </button>
                    <button type="button" class="list-group-item list-group-item-action">Beaten</button>
                    <button type="button" class="list-group-item list-group-item-action">Platform</button>

                </ul>
            </div>
        </div>

    </div>

</div>