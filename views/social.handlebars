<!-- Social has two columns: -->
<!-- First: A friends list that you can use to select which friend you want to stalk. -->
<!-- Second: A table showing their game collection -->

<div class="container">

    <!-- This first row just contains the heading and description -->
    <div class="row row-cols-1 justify-content-center my-3">
        <div class="col-md-auto text-center">
            <div class="container p-5">
                <h2>Social</h2>
                <p class="text-break fs-5 text-muted">You can use this page to approve friend requests.</p>
            </div>
        </div>
    </div>

    <!-- This is the main row which just contains the table of all friend requests -->
    <div class="row row-cols-2 justify-content-center my-3">

        <!-- Friend's Library Table -->
        <div class="col-12 text-center">
            <div class="container p-1">
                <ul class="list-group">
                    
                    <!-- Display every friend request in a list -->
                    {{#each senders as |sender|}}
                    <li class="list-group-item">{{sender.name}} wants to be your friend

                        <!-- Approval button -->
                        <button type="button" class="btn btn-outline-primary" data-postNum="{{sender.id}}" onclick="approveReq(this)">Approve</button>

                        <!-- Decline button -->
                        <button type="button" class="btn btn-outline-primary" data-postNum="{{sender.id}}" onclick="declineReq(this)">Decline</button>
                    </li>
                    {{/each}}

                </ul>
            </div>
        </div>
    </div>
</div>

<script src="./js/friendReq.js"></script>