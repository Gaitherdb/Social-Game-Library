<!-- Login just has two forms: Login and Signup. Signup is hidden by default until you click the button -->
<div class="container">

    <!-- Heading and Description -->
    <div class="row row-cols-1 justify-content-center my-3">
        <div class="col-md-auto text-center">
            <div class="container p-5">
                <h2>Login</h2>
                <p class="text-break fs-5 text-muted">Login so that you can manage your own digital game collection and
                    follow your friends. If you aren't a registered user yet, select the Sign Up option.</p>
            </div>
        </div>
    </div>

    <!-- Login form: Displayed by default -->
    <div class="row row-cols-1 justify-content-center my-3" id="loginForm">
        <div class="col-6">
            <div class="container p-1">
                <form>
                    <div class="mb-3">
                        <label for="loginEmail" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="loginEmail">
                    </div>
                    <div class="mb-3">
                        <label for="loginPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="loginPassword">
                    </div>
                    <button class="btn btn-primary" onclick="login()">Login</button>
                    <a class="btn btn-outline-primary" aria-current="page" href="/signup">Sign up</a>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>